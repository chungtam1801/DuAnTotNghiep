@model AppView.PhanTrang.PhanTrangLSTD

@{
    ViewData["Title"] = "GetAllLSTDByIDKH";
    Layout = "~/Views/Shared/_LayoutForAdmin.cshtml";
    int stt = 1;
}

<h1 style="text-align:center"><b>Xem lịch sử</b></h1>
<table class="table" style="margin-left: 20px">
    <thead>
        <tr>
            <th style=" background-color: darkslategray;
    color: white;">STT</th>
            <th style=" background-color: darkslategray;
    color: white;">Mã hóa đơn</th>
            <th style=" background-color: darkslategray;
    color: white;">Ngày tích hoặc tiêu điểm</th>
            <th style=" background-color: darkslategray;
    color: white;">Tên khách hàng</th>
            
           @* <th style=" background-color: darkslategray;
    color: white;">Số điểm tích hoặc tiêu</th>*@
           

           
          
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listLSTDs)
        {
            <tr>
                <td>
                    <strong style="color:black">@stt</strong>
                </td>
                <td>
                    <div style="color:black">@item.MaHD</div>
                </td>
                <td>
                    <div style="color:green">@item.NgayTichOrTieuDiem</div>
                </td>
                <td>
                    <div style="color:black">@item.TenKhachHang</div>
                </td>
               
                @*<td>
                    <div style="color:red">@item.SoDiemTichOrTieu</div>
                </td>*@

               
                @{
                    stt++;
                }
            </tr>
        }
    </tbody>
</table>
<div class="col-12">
    <nav>
        <ul class="pagination justify-content-center">
           
            @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
            {
                <li class="page-item"><a class="page-link" href="/LichSuTichDiem/GetAllLSTDByID?ProductPage=@i">@i</a></li>

            }

           
        </ul>
    </nav>
</div>

