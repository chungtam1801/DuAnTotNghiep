@{
    ViewData["Title"] = "ProductDetail";
    string idSanPham = TempData["IDSanPham"] as string;
}

<h1>Chi tiết sản phẩm</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Mã
            </th>
            <th>
                Tên màu
            </th>
            <th>
                Mã màu
            </th>
            <th>
                Size
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Giá gốc
            </th>
            <th>
                Giá bán
            </th>
            <th>
                Giá trị khuyến mãi
            </th>
            <th>
                Mặc định
            </th>
            <th>
                Trạng thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="list_productdetails">
    </tbody>
</table>

<div class="d-flex justify-content-end">
    <a asp-action="QuanLyAnh" asp-route-idSanPham="@idSanPham" class="btn btn-success" style="margin-left:5px">Quản lý ảnh</a>
    <a asp-action="AddChiTietSanPham" asp-route-idSanPham="@idSanPham" class="btn btn-primary" style="margin-left:5px">Thêm chi tiết sản phẩm</a>
</div>
<div class="row">
    <div class="col-lg-12 d-flex justify-content-center">
        <ul id="pagination-demo" class="pagination"></ul>
    </div>
</div>

<script src="~/js/jquery-3.3.1.min.js"></script>
<script>
    var pageIndex = 1;
    var pagesize = 10;
    var idSanPham = '@idSanPham';
    $(document).ready(function () {
        loadsp();
    });
    function loadsp() {
        // var searchName = SearchName();
        var request = { page: pageIndex, pageSize: pagesize, id: idSanPham };
        $.ajax({
            url: "/Admin/ShowProductDetail",
            type: "GET",
            data: request,
            success: function (response) {
                $("#list_productdetails").empty();
                $.each(response.data, function (i, item) {
                    if (item.trangThai == 1) {
                        $("#list_productdetails").append(`<tr><td>${item.ma}</td><td>${item.tenMauSac}</td><td><input type="color" value="${item.maMauSac}" style="border:none;width:27px;height:25px" disabled></td><td>${item.tenKichCo}</td><td style="width:100px"><input type="number" value="${item.soLuong}" style="border:none;width:100%" id="soLuong_${item.id}" onchange="changeSoLuong('${item.id}')"></td><td style="width:100px"><input type="number" value="${item.giaGoc}" style="border:none;width:100%" id="giaGoc_${item.id}" onchange="changeGiaBan('${item.id}')"></td><td>${item.giaBan}</td><td>${item.giaTriKhuyenMai}</td><td><input type="radio" name="macDinh" checked id="trangThai_${item.id}" onclick="changeTrangThai('${item.id}')" /></td><td id="hoatDong_${item.id}" style="width:90px"><span style="color:green">Hoạt động</span></td><td id="xoa_${item.id}" style="width:150px"><a href="/Admin/GenerateQRCode?id=${item.id}&ma=${item.ma}" class="btn btn-secondary">Tạo mã QR</a><button type="button" class="btn btn-danger" onclick="xoa('${item.id}')">Xóa</button></td></tr>`);
                    }
                    else if (item.trangThai == 2) {
                        $("#list_productdetails").append(`<tr><td>${item.ma}</td><td>${item.tenMauSac}</td><td><input type="color" value="${item.maMauSac}" style="border:none;width:27px;height:25px" disabled></td><td>${item.tenKichCo}</td><td style="width:100px"><input type="number" value="${item.soLuong}" style="border:none;width:100%" id="soLuong_${item.id}" onchange="changeSoLuong('${item.id}')"></td><td style="width:100px"><input type="number" value="${item.giaGoc}" style="border:none;width:100%" id="giaGoc_${item.id}" onchange="changeGiaBan('${item.id}')"></td><td>${item.giaBan}</td><td>${item.giaTriKhuyenMai}</td><td><input type="radio" name="macDinh" id="trangThai_${item.id}" onclick="changeTrangThai('${item.id}')" /></td><td id="hoatDong_${item.id}" style="width:90px"><span style="color:green">Hoạt động</span></td><td id="xoa_${item.id}" style="width:150px"><a href="/Admin/GenerateQRCode?id=${item.id}&ma=${item.ma}" class="btn btn-secondary">Tạo mã QR</a><button type="button" class="btn btn-danger" onclick="xoa('${item.id}')">Xóa</button></td></tr>`);
                    }
                    else {
                        $("#list_productdetails").append(`<tr><td>${item.ma}</td><td>${item.tenMauSac}</td><td><input type="color" value="${item.maMauSac}" style="border:none;width:27px;height:25px" disabled></td><td>${item.tenKichCo}</td><td style="width:100px"><input type="number" value="${item.soLuong}" style="border:none;width:100%" id="soLuong_${item.id}" onchange="changeSoLuong('${item.id}')"></td><td style="width:100px"><input type="number" value="${item.giaGoc}" style="border:none;width:100%" id="giaGoc_${item.id}" onchange="changeGiaBan('${item.id}')"></td><td>${item.giaBan}</td><td>${item.giaTriKhuyenMai}</td><td><input type="radio" name="macDinh" id="trangThai_${item.id}" onclick="changeTrangThai('${item.id}')" /></td><td id="hoatDong_${item.id}" style="width:90px"><span style="color:red">Không hoạt động</span></td><td id="xoa_${item.id}" style="width:150px"><a href="/Admin/GenerateQRCode?id=${item.id}&ma=${item.ma}" class="btn btn-secondary">Tạo mã QR</a><button type="button" class="btn btn-success" onclick="undo('${item.id}')">Hoàn tác</button></td></tr>`);
                    }
                });
                pagingsp(response.total, function () {
                    loadsp();
                });
            },
            error: function (err) {
                console.log('Error:', err);
            }
        });
    }
    function pagingsp(totalrow, callback) {
        var totalgages = Math.ceil(totalrow / pagesize);
        $("#pagination-demo").twbsPagination({
            totalPages: totalgages,
            visiblePages: 7,
            onPageClick: function (event, page) {
                pageIndex = page;
                setTimeout(callback, 200);
            }
        });
    }
    function ReloadPagination() {
        $("#pagination-demo").twbsPagination('destroy');
        loadsp();
    }
    // function SearchName() {
    //     var name = document.getElementById("searchName").value;
    //     return name;
    // }

    function changeSoLuong(idSP) {
        var ip = document.getElementById("soLuong_" + idSP);
        $.ajax({
            async: true,
            type: 'POST',
            dataType: "json",
            data: { id: idSP, soLuong: ip.value },
            url: '/Admin/UpdateSoluongChiTietSanPham',
            success: function (response) {
                ip.innerHTML = response.message;
            },
            error: function (response) {
                ip.innerHTML = 'Error';
            }
        });
    }
    function changeGiaBan(idSP) {
        var ip = document.getElementById("giaGoc_" + idSP);
        $.ajax({
            async: true,
            type: 'POST',
            dataType: "json",
            data: { id: idSP, giaBan: ip.value },
            url: '/Admin/UpdateGiaBanChiTietSanPham',
            success: function (response) {
                ip.innerHTML = response.message;
            },
            error: function (response) {
                ip.innerHTML = 'Error';
            }
        });
    }
    function changeTrangThai(idSP) {
        $.ajax({
            async: true,
            type: 'POST',
            dataType: "json",
            data: { id: idSP },
            url: '/Admin/UpdateTrangThaiChiTietSanPham',
            success: function (response) {
                if (response) {
                    document.getElementById("hoatDong_" + idSP).innerHTML = '<span style="color:green">Hoạt động</span>';
                    var ip = document.getElementById("xoa_" + idSP);
                    ip.removeChild(ip.children[1]);
                    $("#xoa_" + idSP).append("<button type='button' class='btn btn-danger' onclick = \"xoa('" + idSP + "')\">Xoá</button>");
                }
            }
        });
    }
    function xoa(idSP) {
        $.ajax({
            async: true,
            type: 'GET',
            dataType: "json",
            data: { id: idSP },
            url: '/Admin/DeleteProductDetail',
            success: function (response) {
                if (response.trangThai) {
                    document.getElementById("hoatDong_" + idSP).innerHTML = '<span style="color:red">Không hoạt động</span>';
                    var ip = document.getElementById("xoa_" + idSP);
                    ip.removeChild(ip.children[1]);
                    $("#xoa_" + idSP).append("<button type='button' class='btn btn-success' onclick = \"undo('" + idSP + "')\">Hoàn tác</button>");
                }
                else {
                    alert(response.loi);
                }
            }
        });
    }
    function undo(idSP) {
        $.ajax({
            async: true,
            type: 'GET',
            dataType: "json",
            data: { id: idSP },
            url: '/Admin/UndoProductDetail',
            success: function (response) {
                if (response) {
                    document.getElementById("hoatDong_" + idSP).innerHTML = '<span style="color:green">Hoạt động</span>';
                    var ip = document.getElementById("xoa_" + idSP);
                    ip.removeChild(ip.children[1]);
                    $("#xoa_" + idSP).append("<button type='button' class='btn btn-danger' onclick = \"xoa('" + idSP + "')\">Xoá</button>");
                }
            }
        });
    }
</script>


