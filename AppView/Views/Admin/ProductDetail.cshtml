@model IEnumerable<AppData.ViewModels.SanPham.ChiTietSanPhamViewModelAdmin>

@{
    ViewData["Title"] = "ProductDetail";
    string idSanPham = TempData["IDSanPham"] as string;
}

<h1>ProductDetail</h1>

<p>
    <a asp-action="AddChiTietSanPham" asp-route-idSanPham="@idSanPham">Create New</a>
</p>
<form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MaMauSac)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TenKichCo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SoLuong)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GiaBan)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NgayTao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TenKhuyenMai)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.MaMauSac
                    </td>
                    <td>
                        @item.TenKichCo
                    </td>
                    <td>
                        @item.SoLuong
                    </td>
                    <td>
                        @item.GiaBan
                    </td>
                    <td>
                        @item.NgayTao
                    </td>
                    <td>
                        @item.TenKhuyenMai
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit"></button>
</form>

