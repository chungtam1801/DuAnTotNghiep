@model AppData.ViewModels.SanPham.ChiTietSanPhamViewModelHome
@{
    Layout = "_Layout";
}
<link href="~/css/productdetail.css" rel="stylesheet" type="text/css" />

<div class="container mt-5 mb-5">
    <div class="card">
        <div class="row g-0">
            <div class="col-md-6 border-end">
                <div class="d-flex flex-column justify-content-center">
                    <div class="main_image">
                        <img src="~/img/product/@Model.Anhs.First(x=>x.TrangThai==1).DuongDan" id="main_product_image" width="350">
                    </div>
                    <div class="thumbnail_images">
                        <ul id="thumbnail">
                            @foreach(var x in Model.Anhs)
                            {
                                <li><img onclick="changeImage(this)" src="~/img/product/@x.DuongDan" width="70"></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="p-3 right-side">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3>@Model.Ten</h3>
                    </div>
                    <h3>@Model.ChiTietSanPhams.First(x=>x.TrangThai==1).GiaBan</h3>
                    <div class="ratings d-flex flex-row align-items-center">
                        <div class="d-flex flex-row">
                            <i class='bx bxs-star'></i>
                            <i class='bx bxs-star'></i>
                            <i class='bx bxs-star'></i>
                            <i class='bx bxs-star'></i>
                            <i class='bx bx-star'></i>
                        </div>
                        <span>441 reviews</span>
                    </div>
                    <div class="mt-5">
                        <span class="fw-bold">Màu Sắc</span>
                        <div class="colors">
                            <ul id="colors">
                                @foreach(var item in Model.MaMauSacs)
                                {
                                    <li id="marker-1">@item</li>
                                }                               
                            </ul>
                        </div>
                    </div>
                    <div class="mt-5">
                        <span class="fw-bold">Kích cỡ</span>
                        <div class="colors">
                            <ul id="sizes">
                                @foreach (var item in Model.TenKichCo)
                                {
                                    <li id="marker-1">@item</li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="buttons d-flex flex-row mt-5 gap-3">
                        <button class="btn btn-outline-dark">Buy Now</button>
                        <button class="btn btn-dark">Add to Basket</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function changeImage(element) {

        var main_prodcut_image = document.getElementById('main_product_image');
        main_prodcut_image.src = element.src;
    }
</script>
