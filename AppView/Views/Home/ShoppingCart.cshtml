@using AppData.ViewModels.SanPham;
@model List<GioHangRequest>
@{
    Layout = "_Layout"; 
    string tongTien = TempData.Peek("TongTien") as string;
}
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                    <h4>Giỏ hàng</h4>
                        <div class="breadcrumb__links">
                            <a href="./index.html">Trang chủ</a>
                            <a href="./shop.html">Cửa hàng</a>
                        <span>Giỏ hàng</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Shopping Cart Section Begin -->
    <section class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="shopping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Giá bán</th>
                                    <th>Số lượng</th>
                                    <th>Tổng cộng</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                            {
                                <tr>
                                    <td class="product__cart__item">
                                        <div class="product__cart__item__pic">
                                            <img style="height:128px;width:100px" src="/img/product/@item.Anh" alt="">
                                        </div>
                                        <div class="product__cart__item__text">
                                            <h6>@item.Ten</h6>
                                            <h5>@item.MauSac/@item.KichCo</h5>
                                        </div>
                                    </td>
                                    <td class="cart__price">@item.DonGia.Value.ToString("n0") </td>
                                    <td class="quantity__item">
                                        <div class="quantity">
                                            <div class="pro-qty-2" oninput="Getvalue(@item.IDChiTietSanPham,1)">
                                                <input class="soLuong" name="@item.IDChiTietSanPham" type="text" value="@item.SoLuong">
                                            </div>
                                        </div>
                                    </td>
                                    <td class="cart__price">@((item.DonGia.Value*item.SoLuong).ToString("n0")) </td>
                                    <td class="cart__close"><a asp-controller="Home" asp-action="DeleteFromCart" asp-route-id="@item.IDChiTietSanPham"><i class="fa fa-close"></i></a></td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="continue__btn">
                                <a href="#">Tiếp tục mua sắm</a>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="continue__btn update__btn">
                            <a onclick="UpdateCart()"><i class="fa fa-spinner"></i> Cập nhật giỏ hàng</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="cart__total">
                    <h6>Tổng số giỏ hàng</h6>
                        <ul>
                            <li>Tổng <span>@tongTien VNĐ</span></li>
                        </ul>
                    <a href="CheckOut" class="primary-btn">Proceed to checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        function UpdateCart(){
            var dl = document.getElementsByClassName("soLuong");
            var lst = [];
            for(var i = 0;i<dl.length;i++){
                lst.push(dl[i].name + dl[i].value)
            }
            var postData = { dssl: lst };
            console.log(postData);
            $.ajax({
                async: true,
                type: 'POST',
                dataType: "json",
                data: postData,
                url: '/Home/UpdateCart',
                success: function (response) {
                    if (response.success == true) {
                        window.location = 'https://localhost:5001/Home/ShoppingCart';
                    } else {
                        toastr.error(response.message, 'Error Alert', { timeOut: 300 });
                    }
                },
                error: function (response) {
                    console.log(response);
                    toastr.error(response.message, 'Error Alert', { timeOut: 300 });
                }
            });
            }
        

    </script>
    <!-- Shopping Cart Section End -->

 