<!-- custom js -->
<script type="text/javascript" src="~/ThongKe/assets/js/main.min.js"></script>
<script type="text/javascript" src="~/ThongKe/assets/pages/dashboard.js"></script>
<script type="text/javascript" src="~/ThongKe/assets/pages/elements.js"></script>
<script src="~/ThongKe/assets/js/menu.min.js"></script>
<script>
    Highcharts.chart('piechart', {
        chart: {
            type: 'pie',
            options3d: {
                enabled: true,
                alpha: 45,
                beta: 0
            }
            //  backgroundColor:'#fff'
        },
        title: {
            text: 'Browser market shares at a specific website, 2014'
        },
        tooltip: {
            pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                depth: 35,
                dataLabels: {
                    enabled: true,
                    format: '{point.name}'
                }
            }
        },
        series: [{
            type: 'pie',
            name: 'Browser share',
            data: [
                {
                    name: 'Firefox',
                    y: 40.0,
                    sliced: true,
                    selected: true,
                    color: '#2BBBAD'
                },
                {
                    name: 'IE',
                    y: 26.8,
                    color: '#39444e'
                },
                {
                    name: 'Chrome',
                    y: 12.8,
                    color: '#2196F3'
                },
                {
                    name: 'Safari',
                    y: 8.5,
                    color: '#3F729B'
                },
                {
                    name: 'Opera',
                    y: 6.2,
                    color: '#f57c00'
                },
                {
                    name: 'Others',
                    y: 5.7,
                    color: '#aa66cc'
                }
            ]
        }]
    });
</script>

