@using AppData.Models
@{
    var lstLSP = ViewData["lstLSP"] as List<LoaiSP>;
    <style>

        .filterdm {
            transform: translate(-50%, -50%);
            background: #1b1b1b;
            line-height: 40px;
            padding: 8px 25px;
            border-radius: 5px;
        }

            .filterdm label {
                color: white;
                font-size: 22px;
                font-weight: 500;
                display: block;
                cursor: pointer;
            }

        .buttonfilter span {
            float: right;
            line-height: 40px;
            transition: 0.5s;
        }

            .buttonfilter span.rotate {
                transform: rotate(-180deg);
            }

        .filterdm ul {
            position: absolute;
            background: #1b1b1b;
            list-style: none;
            top: 75px;
            left: 0;
            width: 100%;
            border-radius: 5px;
            display: none;
        }

        [id^=btn]:checked + ul {
            display: block;
        }

        .filterdm .menu:before {
            position: absolute;
            content: '';
            height: 20px;
            width: 20px;
            background: #1b1b1b;
            right: 20px;
            top: -10px;
            transform: rotate(45deg);
            z-index: -1;
        }

        .filterdm ul li {
            line-height: 40px;
            padding: 8px 20px;
            cursor: pointer;
            border-bottom: 1px solid rgba(0,0,0,0.2);
        }

            .filterdm ul li label {
                font-size: 18px;
            }

            .filterdm ul li a {
                color: white;
                text-decoration: none;
                font-size: 18px;
                display: block;
            }

                .filterdm ul li a:hover,
                .filterdm ul li label:hover {
                    color: cyan;
                }

        .filterdm ul ul {
            position: static;
        }

            .filterdm ul ul li {
                line-height: 30px;
                padding-left: 30px;
                border-bottom: none;
            }

                .filterdm ul ul li a {
                    color: #e6e6e6;
                    font-size: 17px;
                }

        .filterdm ul li span {
            font-size: 20px;
            float: right;
            margin-top: 10px;
            padding: 0 10px;
            transition: 0.5s;
        }

            .filterdm ul li span.rotate {
                transform: rotate(-180deg);
            }

        .menu input {
            display: none;
        }
    </style>
}
<div class="container mt-2 fixed">
    <div class ="filterdm">
        <label for="btn" class="buttonfilter">
            Drop down
            <span class="fas fa-caret-down"></span>
        </label>
        <input type="checkbox" id="btn">
        <ul class="menu">
            <li><a href="#">Home</a></li>
            <li>
                <label for="btn-2" class="first">
                    Features
                    <span class="fas fa-caret-down"></span>
                </label>
                <input type="checkbox" id="btn-2">
                <ul>
                    <li><a href="#">Pages</a></li>
                </ul>
            </li>
            <li>
                <label for="btn-3" class="second">
                    Services
                    <span class="fas fa-caret-down"></span>
                </label>
                <input type="checkbox" id="btn-3">
                <ul>
                    <li><a href="#">Web Design</a></li>
                    <li><a href="#">App Design</a></li>
                </ul>
            </li>
            <li><a href="#">Contact</a></li>
            <li><a href="#">Feedback</a></li>
        </ul>
    </div>
</div>

